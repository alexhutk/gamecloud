@using SteamKiller.BLL.Infrastructure.Extensions;

@{
    ViewData["Title"] = "Report";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model SteamKiller.WEB.Areas.Admin.Models.Report.ReportAddViewModel

<div class="row">
    <div class="col-md-12">
        <h2>Have a question?</h2>
        <p>Fill in the form to ask it!</p>
        <div class="line"></div>
    </div>
</div>
<form method="post" asp-area="Admin" asp-controller="Report" asp-action="Report" asp-route-accId="@User.GetAccountId()" class="col-md-12 col-lg-7">
    <div class="form-group">
        <textarea asp-for="Message" class="form-control" aria-label="With textarea" placeholder="Your question here"></textarea>
    </div>
    <button type="submit" class="form-btn btn btn-primary">Send</button>
</form>

