@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model SteamKiller.DPL.Models.AccountAddViewModel

<div class="row">
    <div class="col-md-12 error-text">
        <h2>Register</h2>
        <p>Fill in the form to register.</p>
        <div class="line"></div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
    </div>
</div>
<form method="post" asp-area="Admin" asp-controller="Account" asp-action="Register" asp-antiforgery="true" class="col-md-12 col-lg-7">
    <div class="form-group">
        <label for="exampleInputEmail1">Username</label>
        <input type="text" asp-for="Name" class="form-control" id="exampleInputEmail1" placeholder="Enter username here">
        <span asp-validation-for="Name" />
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="Password" />
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Confirm password</label>
        <input type="password" asp-for="ConfirmPassword" class="form-control" id="exampleInputPassword1" placeholder="Confirm Password">
        <span asp-validation-for="ConfirmPassword" />
    </div>
    <button type="submit" class="form-btn btn btn-primary">Register</button>
</form>

