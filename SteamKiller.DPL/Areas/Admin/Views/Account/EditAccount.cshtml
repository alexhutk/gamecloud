
@{
    ViewData["Title"] = "Accounts";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model SteamKiller.WEB.Areas.Admin.Models.Account.EditAccountViewModel

<div class="col-md-12 error-text">
    <h2>Edit Account</h2>
    <p>You can edit your account info on that page.</p>
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <hr />
</div>
<form method="post" asp-area="Admin" asp-controller="Account" asp-action="EditAccount" enctype="multipart/form-data" class="col-md-12 col-lg-7">
    <div class="form-group">
        <label for="exampleInputEmail1">Account name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter app name here">
        <span asp-validation-for="Name" />
    </div>
    <div class="form-group">
        <label for="exampleFormControlFile1">Avatar</label>
        <input type="file" class="form-control-file" asp-for="Image">
        <div class="edit-image">
            <img src="@Model.Avatar" />
        </div>
    </div>
    <button type="submit" class="form-btn btn btn-primary">Edit</button>
</form>

