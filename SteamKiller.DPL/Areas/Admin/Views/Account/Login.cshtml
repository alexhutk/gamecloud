@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model SteamKiller.WEB.Areas.Admin.Models.Account.LoginViewModel

<div class="row">
    <div class="col-md-12 error-text">
        <h2>Login</h2>
        <p>Fill in the form to login.</p>
        <hr>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
    </div>
</div>
<form method="post" asp-area="Admin" asp-controller="Account" asp-action="Login" asp-antiforgery="true" class="col-md-12 col-lg-7">
    <div class="form-group">
        <label for="exampleInputEmail1">Username</label>
        <input type="text" asp-for="Username" class="form-control" id="exampleInputEmail1" placeholder="Enter username here">
        <span asp-validation-for="Username" />
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="Password" />
    </div>
    <button type="submit" class="form-btn btn btn-primary">Login</button>
    <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Register" asp-area="Admin">Register</a>
</form>
