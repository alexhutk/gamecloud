@using SteamKiller.BLL.Infrastructure.Extensions;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title id="title">@ViewData["Title"]</title>

    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon" />

    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <!-- Our Custom CSS -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/css/sidebar.css">
    <link rel="stylesheet" type="text/css" href="~/css/media.css">
    <link rel="stylesheet" type="text/css" href="~/css/forms.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.css">

</head>

<body>
    <header>
        <div class="header">
            <div class="headerContainer">
                <div class="logo">
                    <a id="sidebarCollapse" class="btn">
                        <i class="fas fa-bars"></i>
                    </a>
                    <a href="#">
                        <img src="~/images/logo.png" alt="Logo" class="logo__img">
                    </a>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="search-form">
                        <form class="form-inline" method ="get" asp-area="Admin" asp-controller="Application" asp-action="SearchApplications">
                            <div class="form-group mx-sm-3 mb-2">
                                <input type="text" class="form-control search-field" id="searchQuery" name="searchQuery" placeholder="Enter application name...">
                            </div>
                            <button type="submit" class="btn btn-outline-secondary mb-2 search-btn"><i class="fas fa-search"></i></button>
                        </form>
                    </div>
                }
                    <div class="loginBlock">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Login" asp-controller="Account" asp-area="Admin" class="btn btn-outline-secondary">Sign in</a>
                        }
                        else
                        {
                            <a asp-area="Admin" asp-controller="Account" asp-action="EditAccount" asp-route-accId="@User.GetAccountId()" data-toggle="tooltip" data-placement="bottom" title="@User.Identity.Name">
                                <img id="Avatar" src="" />
                            </a>
                            <a asp-action="Logout" asp-controller="Account" asp-area="Admin" class="btn btn-outline-secondary">Sign out</a>
                        }
                    </div>
            </div>
        </div>
    </header>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <ul class="list-unstyled components left-menu">
                @if (User.Identity.IsAuthenticated)
                {
                    <li id="Applications">
                        <a asp-area="Admin" asp-controller="Application" asp-action="Applications" asp-route-accId="@User.GetAccountId()">
                            <i class="fas fa-tablet-alt"></i>
                            <span>Applications</span>
                        </a>
                    </li>
                    <!--<li id="">
                        <a href="#">
                            <i class="fas fa-chart-pie"></i>
                            <span>Analytics</span>
                        </a>
                        </li>
                        -->
                    <li id="Accounts">
                        <a asp-area="Admin" asp-controller="Account" asp-action="EditAccount" asp-route-accId="@User.GetAccountId()">
                            <i class="fas fa-user"></i>
                            <span>Account</span>
                        </a>
                    </li>
                    <li id="FinanceProfile">
                        <a asp-area="Admin" asp-controller="Finance" asp-action="FinanceProfile" asp-route-accId="@User.GetAccountId()">
                            <i class="fas fa-briefcase"></i>
                            <span>Finance</span>
                        </a>
                    </li>
                }
                <li id="Documentation" class="terminator">
                    <a asp-area="Admin" asp-controller="Documentation" asp-action="Index">
                        <i class="fas fa-book"></i>
                        <span>Documentation</span>
                    </a>
                </li>
                <li id="NotImplemented">
                    <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-cog"></i>
                        <span>SDK</span>
                    </a>
                    <ul class="collapse list-unstyled" id="pageSubmenu">
                        <li>
                            <a asp-area="Admin" asp-controller="Sdk" asp-action="GetUnitySdk">Unity</a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="Sdk" asp-action="GetUnrealSdk">UE4</a>
                        </li>
                    </ul>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li id="Report">
                        <a asp-area="Admin" asp-controller="Report" asp-action="Report">
                            <i class="fas fa-question-circle"></i>
                            <span>Need Help?</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
        <div id="content">
            @RenderBody()
        </div>

    </div>

    <script src="~/js/main.js"></script>
    <!-- jQuery CDN - Slim version (=without AJAX) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <!-- Popper.JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });

        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>

</html>
